<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wj.base.view.NoScrollViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_tab_home"
            android:gravity="center"
            android:paddingBottom="@dimen/widget_size_5"
            android:paddingTop="@dimen/widget_size_5"
            android:text="首页"
            android:textColor="@drawable/selector_tab_text"
            android:textSize="@dimen/font_size_14" />


        <RadioButton
            android:id="@+id/rb_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_category"
            android:gravity="center"
            android:paddingBottom="@dimen/widget_size_5"
            android:paddingTop="@dimen/widget_size_5"
            android:text="分类"
            android:textColor="@drawable/selector_tab_text"
            android:textSize="@dimen/font_size_14" />


        <RadioButton
            android:id="@+id/rb_open_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_person"
            android:gravity="center"
            android:paddingBottom="@dimen/widget_size_5"
            android:paddingTop="@dimen/widget_size_5"
            android:text="项目"
            android:textColor="@drawable/selector_tab_text"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

</LinearLayout>