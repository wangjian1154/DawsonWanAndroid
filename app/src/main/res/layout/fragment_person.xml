<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector_white_bg"
            android:paddingBottom="@dimen/widget_size_20"
            android:paddingLeft="@dimen/widget_size_15"
            android:paddingRight="@dimen/widget_size_15"
            android:paddingTop="@dimen/widget_size_20">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/widget_size_49"
                android:layout_height="@dimen/widget_size_49"
                android:src="@drawable/ic_avatar_default" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/widget_size_10"
                android:layout_toRightOf="@+id/iv_avatar"
                android:singleLine="true"
                android:text="@string/click_login"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_18" />

        </RelativeLayout>

        <include layout="@layout/devider_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_30" />

        <com.wj.base.view.PersonItemView
            android:id="@+id/piv_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector_white_bg"
            app:title="收藏" />

        <include layout="@layout/devider_line" />

        <com.wj.base.view.PersonItemView
            android:id="@+id/piv_browse_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector_white_bg"
            app:title="浏览记录" />


        <LinearLayout
            android:id="@+id/ll_exit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/devider_line" />

            <com.wj.base.view.PersonItemView
                android:id="@+id/piv_exit_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_white_bg"
                app:title="退出登录" />

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>