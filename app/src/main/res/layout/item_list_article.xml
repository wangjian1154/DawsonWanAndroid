<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/widget_size_10"
    android:layout_marginLeft="@dimen/widget_size_10"
    android:layout_marginRight="@dimen/widget_size_10"
    android:layout_marginTop="@dimen/widget_size_10"
    app:cardCornerRadius="@dimen/widget_size_5"
    app:cardElevation="@dimen/widget_size_5"
    app:contentPadding="@dimen/widget_size_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_100">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="@dimen/widget_size_18" />


        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="1111"
            android:textSize="@dimen/widget_size_14" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="2018"
            android:textSize="@dimen/widget_size_14" />

    </RelativeLayout>

</android.support.v7.widget.CardView>